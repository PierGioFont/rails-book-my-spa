
<div class="container">
  <div class="row">
    <div class = 'col-sm-6 spas_show'>
      <h1><%= @spa.name %></h1>
      <p><%= @spa.description %></p>
      <p><% @spa.amenities.values %></p>
      <% if @spa.photo? %>
      <%= cl_image_tag @spa.photo.path, width: 200, height: 300, crop: :fill %>
      <% end %>
    </div>

    <div class = 'col-sm-6 massages'>
    <ul class="list-unstyled">
        <% @spa.massages.each do |massage| %>
          <li class = "massage">
            <div class="massage-content">
              <p><strong><%= massage.name %></strong></h3>
              <p><%= massage.description %></p>
            </div>
            <div class="massage-price">
              <p><%= massage.price %>â‚¬</p>
            </div>
            <div class="massage-book">
              <%= link_to "Book", new_spa_booking_path(params[:id], massage_id: massage.id) ,  class: "btn btn-primary"%>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


