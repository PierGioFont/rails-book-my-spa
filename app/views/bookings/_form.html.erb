<div class="form-booking">
  <%= simple_form_for [@spa, @booking] do |f| %>
    <%#= f.error_notification %>
    <div class="form-inputs">
      <%#= f.input :massage_id, collection: @spa.massages, selected: @massage, as: :radio_buttons %>
      <ul>
      <% @spa.massages.each do |massage| %>
          <div class="radio-enhanced">
            <input type="radio" id="<%= massage.id %>" name="booking[massage_id]" value="<%= massage.id %>" />
            <label for="<%= massage.id %>">
              <div class="radio-enhanced-content">
                <h3><%= massage.name %></h3>
                <p><%= massage.description %></p>
              </div>
              <p class = "radio-enhanced-price"><%= massage.price %>â‚¬</p>
              <i class="fa fa-plus text-left plus" aria-hidden="true"></i>
            </label>
          </div>
        <% end %>
      </ul>
      <%= f.input :date, label: "Date", required: false %>
      <%= f.input :time_in, as: :time, label: "Heure", required: false%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-danger btn-lg btn-block " %>
    </div>
  <% end %>
</div>
