<button class="btn btn-primary btn-block text-left bnt-lg" data-toggle="modal" data-target="#review<%= booking.id %>">
  <i class="fa fa-edit"></i> Rate your stay
</button>

<div class="modal fade" id="review<%= booking.id %>" tabindex="-1" role="dialog" aria-labelledby="review-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="review-modal">
          Rate your experience
        </h4>
      </div>

      <!-- Modal Body -->
      <div class="modal-body">

        <%= simple_form_for booking, method: :patch do |f| %>

          <p>Rate your stay at <strong><%= booking.spa.name.capitalize %></strong></p>
           <div class="form-group">
            <%= f.input :content, as: :text, label: false, input_html: { rows: 7, :minlength => 100, placeholder: "a few words about your stay (min 100 characters)" } %>
            <div class="radio-buttons star-cb-group text-right">
              <input type="radio" id="rating-5" name="booking[rating]" value="5" />
              <label for="rating-5">5</label>
              <input type="radio" id="rating-4" name="booking[rating]" value="4" checked="checked" />
              <label for="rating-4">4</label>
              <input type="radio" id="rating-3" name="booking[rating]" value="3" />
              <label for="rating-3">3</label>
              <input type="radio" id="rating-2" name="booking[rating]" value="2" />
              <label for="rating-2">2</label>
              <input type="radio" id="rating-1" name="booking[rating]" value="1" />
              <label for="rating-1">1</label>
              <input type="radio" id="rating-0" name="booking[rating]" value="0" class="star-cb-clear" />
              <label for="rating-0">0</label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              Cancel
            </button>
            <%= f.submit "Rate my stay", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div> <!-- modal content -->
  </div>
</div>
