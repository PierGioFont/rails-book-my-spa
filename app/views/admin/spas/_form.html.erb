<div class="form-spa">
    <%= simple_form_for [:admin, @spa], method: method do |f| %>
      <div class="form-inputs">
        <%= f.input :name, label: "Name of your spa" %>
        <%= f.input :description, label: "Description",
          as: :bootsy, :input_html => {:rows => 10},
          editor_options: { link: false, color: false, image: false, blockquote: false }  %>
          <%=  %>
          <%= f.input :address, input_html: { class: 'address', id: 'where'} %>
        <%= f.input :photo, as: :attachinary %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-success btn-lg btn-block " %>
      </div>
    <% end %>
  </div>
