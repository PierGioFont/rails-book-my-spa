<div class="container">
  <h1 class="text-center">My spas</h1>
  <ul class="list-unstyled">
    <% @spas.each do |spa| %>
      <li class="booking">
        <% if spa.photo? %>
          <%= cl_image_tag spa.photo.path, width: 175, height: 120, crop: :scale, class: "booking-image" %>
        <% end %>
        <div class="booking-body">
          <h3><%= spa.name %></h3>
          <p><%= spa.address %></p>
        </div>
        <div class="booking-controls">
          <%= link_to spa do %>
            <i class="fa fa-eye fa-lg"></i>
          <% end %>
          <%= link_to admin_spa_bookings_path(spa) do %>
            <i class="fa fa-calendar-o fa-lg"></i>
          <% end %>
          <%= link_to edit_admin_spa_path(spa) do %>
            <i class="fa fa-edit fa-lg"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>



