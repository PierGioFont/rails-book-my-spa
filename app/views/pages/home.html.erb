
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


 <!-- Your banner code -->
    <div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url(<%= cl_image_path "bannerbackground_jykgjz.jpg", quality: "auto" %>);">
      <div class="banner-content">
        <h1>SPADIUM</h1>
        <p>Rent unique places to stay enjoy a spa.</p>
          <div class="container text-center">
            <form class="form-spabnb" action=<%= spas_path %>>
              <div class="form-location">
                <Label>Where</Label>
                <input type="text" class="form-control input-lg" id="where" name="where" placeholder="Bruxelles, Bordeaux, Milan">
              </div>
              <div class="form-dates">
                <!-- <div> -->
                  <Label>Dates</Label>
                <!-- </div> -->

                <div class="form-checkinout">
                  <input type="text" class="form-control input-lg" id="checkin" placeholder="checkin">
                  <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                  <input type="text" class="form-control input-lg" id="checkout" placeholder="checkout">
                  <!-- <button type="button" class="btn btn-circle"><i class="fa fa-times"></i></button> -->
                </div>
              </div>
              <div class="form-guests">
                <Label>Guests</Label>
                <select class="form-control input-lg" id="nbguest">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
              <div class="form-search">
                <button type="submit" class="btn btn-danger btn-lg">Search</button>
              </div>
            </form>
          </div>
      </div>
    </div>



     <!-- Your cards code -->
    <div class="wrapper-grey padded">
      <div class="container">
        <h2 class="text-center">Your next relaxing moment</h2>
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path('cardspa3.jpg')%>);">
              <div class="card-category">Paris</div>
              <div class="card-description">
                <h2>Le Spa 28</h2>
                <p>Serenity and Calm</p>
              </div>
              <a class="card-link" href="#" ></a>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path('cardspa2.jpg')%>);">
              <div class="card-category">Brussels</div>
              <div class="card-description">
                <h2>Blue Lights</h2>
                <p>Chill and Massages</p>
              </div>
              <a class="card-link" href="#" ></a>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path('cardspa1.jpg')%>);">
              <div class="card-category">London</div>
              <div class="card-description">
                <h2>Soho Spa</h2>
                <p>Classic Spa</p>
              </div>
              <a class="card-link" href="#" ></a>
            </div>
          </div>
        </div>
      </div>
    </div>




    <!-- Your newsletter code -->
    <div class="text-center padded" id="newsletter">
      <h2>Get news from us</h2>
      <p>Leave us your mail and get news from us</p>
      <form class="form-inline">
        <input type="email" placeholder="adrien@gmail.com" class="form-control">
        <input type="submit" value="Subscribe" class="btn btn-primary">
      </form>
    </div>
