
<!-- banner code -->
<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url(<%= cl_image_path "bannerbackground_jykgjz.jpg", quality: "auto" %>);">
  <div class="banner-content">
    <h1>SPADIUM</h1>
    <p>Want to see the very best spas ?</p>
      <div class="container relaxing-moment text-center">
        <form class="form-spabnb" action=<%= spas_path %>>
          <div class="form-location">
            <Label>Where</Label>
            <input type="text" class="form-control input-lg" id="where" name="where" placeholder="Bruxelles, Bordeaux, Milan">
          </div>
          <div class="form-dates">
            <!-- <div> -->
              <Label>Dates</Label>
            <!-- </div> -->

            <div class="form-checkinout">
              <input type="text" class="form-control datepicker input-lg" data-provide='datepicker' name="checkin" placeholder="checkin">

              <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
              <input type="text" class="form-control datepicker input-lg" data-provide='datepicker' name="checkout" placeholder="checkout">
              <!-- <button type="button" class="btn btn-circle"><i class="fa fa-times"></i></button> -->
            </div>
          </div>
          <div class="form-guests">
            <Label>Guests</Label>
            <select class="form-control input-lg" id="nbguest" name="guests">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <div class="form-search">
            <button type="submit" class="btn btn-danger btn-lg">Search</button>
          </div>
        </form>
      </div>
  </div>
</div>



<!-- Your cards code -->
<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="relaxing-moment text-center">Your next relaxing moment</h2>
    <div class="row">
      <% @spas.each do |spa| %>
      <div class="col-xs-12 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path spa.photo.path, quality: "auto:eco", height: 175, crop: :fill unless spa.photo.nil? %>');">
          <div class="card-category"><%= spa.name %></div>
          <div class="card-description">
          <p class="address-spa"><%= spa.address %></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>











<!-- Your newsletter code -->
<div class="text-center padded" id="newsletter">
  <h2>Get news from us</h2>
  <p>Leave us your mail and get news from us</p>
  <form class="form-inline">
    <input type="email" placeholder="adrien@gmail.com" class="form-control">
    <input type="submit" value="Subscribe" class="btn btn-primary">
  </form>
</div>

<!-- Include Google Maps JS API -->

<% content_for(:after_js) do %>
  <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js" %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.datepicker').datepicker();
    });
  </script>
<% end %>



