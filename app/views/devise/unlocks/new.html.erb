<div class="background" style="background: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url(<%= image_path 'fleur-de-lotus.jpg'%>); background-repeat: no-repeat; background-size: cover;">
  <div class="glass">
    <div class="carde text-center" >
        <div class="text-center logs">
         <p>Resend unlock instructions</p>
        </div>


        <div class="container logs-container text-center">
         <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
           <%= f.error_notification %>
           <%= f.full_error :unlock_token %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
            </div>
          </div>
        </div>

        <div class="container logs-container">
            <div class="form-actions text-center log-btn">
             <%= f.button :submit, "Resend unlock instructions", class: "btn btn-lg btn-danger" %>
           </div>
         <% end %>

         <%= render "devise/shared/links" %>
        </div>
  </div>
</div>

