<div class="navbar-wagon">
  <!-- Logo -->

  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= cl_image_tag("logo_pbq3gd.png", :quality=>"auto", :width=>90, :secure=>true) %>
    <%#= image_tag "logo.png" %>
    SPADIUM
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">

    <!-- Search form -->
    <!-- <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <% if current_user.bookings %>
        <%= link_to bookings_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <div class="badge-container">
            <i class="fa fa-calendar-check-o"></i>
            <div class="badge badge-blue"><%= current_user.bookings.size %></div>
          </div>
        <% end %>
      <% end %>


      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to bookings_path do %>
                <i class="fa fa-calendar-check-o"></i> <%= t(".profile", default: "My bookings") %>
              <% end %>
            </li>
            <li>
              <% if current_user.spas.size > 0 %>
                <%= link_to admin_spas_path do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "My spas") %>
                <% end %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to new_user_session_path do %>
        <div class="navbar-wagon-item navbar-wagon-link
          navbar-wagon-button navbar-wagon-button-green btn">
          <i class="fa fa-sign-in"></i> <%= t(".sign_in", default: "Login") %>
        </div>
      <% end %>

    <% end %>

    <!-- Button (call-to-action) -->
    <%#= link_to t(".top_call_to_action", default: "Post stuff"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to bookings_path do %>
            <i class="fa fa-calendar-check-o"></i> <%= t(".profile", default: "My bookings") %>
          <% end %>
        </li>
        <li><a href="#">Other one</a></li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

